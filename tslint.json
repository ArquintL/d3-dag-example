{
    "rulesDirectory": ["node_modules/tslint-eslint-rules/dist/rules"],
    "rules": {
        "no-debugger": true,
        "triple-equals": [true, "allow-null-check"],
        "no-eval": true,
        "no-reference": true,
        "quotemark": [true, "double"],
        "typedef": [true, "call-signature", "parameter", "arrow-parameter", "property-declaration", "variable-declaration", "member-variable-declaration"],
        "max-line-length": [true, 100],
        "member-access": [true, "check-accessor", "check-constructor"],
        "no-var-requires": true,
        "typedef-whitespace": 
            [
                true,
                {
                    "call-signature": "nospace",
                    "index-signature": "nospace",
                    "parameter": "nospace",
                    "property-declaration": "nospace",
                    "variable-declaration": "nospace"
                },
                {
                    "call-signature": "onespace",
                    "index-signature": "onespace",
                    "parameter": "onespace",
                    "property-declaration": "onespace",
                    "variable-declaration": "onespace"
                }
            ],
        "curly": true,
        "no-construct": true,
        "no-var-keyword": true,
        "no-unused-expression": true,
        "indent": [true, "spaces"],
        "eofline": true,
        "align": [true, "parameters", "statements"],
        "class-name": true,
        "comment-format": [true, "check-space", "check-lowercase"],
        "jsdoc-format": true,
        "semicolon": [true, "always"],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "whitespace": 
            [
                true, 
                "check-branch", 
                "check-decl", 
                "check-operator", 
                "check-module", 
                "check-separator", 
                "check-type", 
                "check-typecast"
            ],
        "no-angle-bracket-type-assertion": true,
        "no-parameter-properties": true,
        "brace-style": 
            [
                true,
                "1tbs",
                {
                    "allowSingleLine": true
                }
            ]
    }
}
