{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true
    },
    "files": ["src/app.js"], // stop typescript compiler looking at all file in directory and instead only include files that are referenced
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
